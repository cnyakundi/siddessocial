# Siddes Docker Dev Environment
# Copy to ops/docker/.env and edit as needed.

# Ports
SIDDES_FRONTEND_PORT=3000
SIDDES_BACKEND_PORT=8001
POSTGRES_PORT=5432

# Backend
DJANGO_DEBUG=1
DJANGO_SECRET_KEY=dev-insecure-change-me
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend
DJANGO_TIME_ZONE=Africa/Nairobi

# Required when DJANGO_DEBUG=0 (prod). For dev, a short value is OK.
SIDDES_CONTACTS_PEPPER=dev_pepper_change_me

# Databases / cache (defaults already set in docker-compose.dev.yml)
DATABASE_URL=postgres://siddes:siddes_dev_password@db:5432/siddes
REDIS_URL=redis://redis:6379/0

# Frontend API bases
# - NEXT_PUBLIC_API_BASE is what the browser uses (your laptop)
# - SD_INTERNAL_API_BASE is what the frontend container uses to talk to the backend container
NEXT_PUBLIC_API_BASE=http://localhost:8001
SD_INTERNAL_API_BASE=http://backend:8000

# Public legal/contact strings (used on static policy pages)
NEXT_PUBLIC_SUPPORT_EMAIL=support@YOURDOMAIN.com
NEXT_PUBLIC_PRIVACY_EMAIL=privacy@YOURDOMAIN.com
NEXT_PUBLIC_LEGAL_ENTITY_NAME=YOUR LEGAL ENTITY NAME
NEXT_PUBLIC_LEGAL_JURISDICTION=YOUR JURISDICTION
POSTGRES_DB=siddes
POSTGRES_USER=siddes
POSTGRES_PASSWORD=siddes_dev_password
NEXT_PUBLIC_SD_PUBLIC_TRUST_GATES=1
SD_INBOX_STORE=auto
SD_INBOX_DUALWRITE_DB=0
