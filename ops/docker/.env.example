# Siddes dev (Docker) env example
POSTGRES_DB=siddes
POSTGRES_USER=siddes
POSTGRES_PASSWORD=siddes_dev_password
POSTGRES_PORT=5432

DJANGO_SECRET_KEY=dev_secret_key_change_me
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# If your backend reads DATABASE_URL, set it. Otherwise adapt settings.py accordingly.
DATABASE_URL=postgres://siddes:siddes_dev_password@db:5432/siddes

REDIS_URL=redis://redis:6379/0

NEXT_PUBLIC_API_BASE=http://localhost:8000

# Inbox store selection (dev)
# - memory (default): seeded in-memory InboxStore
# - db: force Postgres-backed InboxStore (requires migrations + optional seeding)
# - auto: prefer DB when reachable + migrated; otherwise fall back to memory
#
# SD_INBOX_STORE=memory
# SD_INBOX_STORE=db
# SD_INBOX_STORE=auto
#
# Optional: shadow-write to DB while reading from memory (cutover helper)
# SD_INBOX_DUALWRITE_DB=0

# Sets store selection (dev)
# - auto (default): prefer DB when reachable+migrated; otherwise fall back to memory
# - memory: force in-memory store behind Django /api/sets
# - db: force Postgres-backed SetsStore (requires migrations)
#
# SD_SETS_STORE=memory
# SD_SETS_STORE=db
# SD_SETS_STORE=auto

# Frontend Sets provider (default local; opt-in)
# NEXT_PUBLIC_SETS_PROVIDER=backend_stub

# Public Side tuning (frontend flags; default OFF)
# NEXT_PUBLIC_SD_PUBLIC_CHANNELS=0
# NEXT_PUBLIC_SD_PUBLIC_TRUST_DIAL=0
# NEXT_PUBLIC_SD_PUBLIC_TRUST_GATES=0
# NEXT_PUBLIC_SD_PUBLIC_SLATE=0
# NEXT_PUBLIC_SD_PUBLIC_CALM_UI=0
